---
import projectsData from '../data/projects.json';
const { projects } = projectsData;
---

<section id="projects" class="py-12 section md:pt-24 md:pb-24 scroll-m-20 w-5/6 mx-auto container lg:max-w-6xl md:max-w-2xl">
    <h2 class="text-3xl font-semibold mb-8 text-center md:text-left">Projects</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
            <article class="bg-zinc-800/50 rounded-lg overflow-hidden border border-zinc-600/50 transition-all hover:scale-[1.01] hover:border-zinc-600/70 hover:shadow-lg hover:shadow-zinc-400/20">
                <div class="p-6 flex flex-col h-full">
                    <h3 class="text-xl font-bold text-white mb-4">{project.title}</h3>
                    <div class="flex flex-wrap gap-2 mb-4">
                        {project.technologies.map((tech) => (
                            <span class="px-3 py-1 bg-zinc-900/80 rounded-full text-xs text-zinc-300 border border-zinc-700/50">{tech}</span>
                        ))}
                    </div>
                    <p class="text-zinc-300 leading-relaxed mt-4 flex-grow">{project.description}</p>
                    <div class="pt-6 mt-auto">
                        <a href={project.githubUrl} class="inline-flex items-center text-zinc-400 hover:text-white transition-colors hidden" target="_blank" rel="noopener noreferrer">
                            <img src="/github-mark-white.svg" class="h-6 opacity-70 hover:opacity-100 mr-2" alt="GitHub logo" loading="lazy" decoding="async"/>
                            <span class="text-sm">View Code</span>
                        </a>
                    </div>
                </div>
            </article>
        ))}
    </div>
</section>