---
import projectsData from '../data/projects.json';
const { projects } = projectsData;
---

<section id="projects" class="py-12 section md:pt-24 md:pb-24 scroll-m-20 w-5/6 mx-auto container lg:max-w-6xl md:max-w-2xl">
    <h2 class="text-3xl font-semibold mb-12">Projects</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
            <article class="hover:bg-neutral-950 hover:bg-opacity-65 bg-neutral-950 bg-opacity-25 rounded-md overflow-hidden hover:transform hover:scale-[1.02] transition-all shadow-lg shadow-neutral-950/70 hover:shadow-xl hover:shadow-indigo-950/70">
                <div class="p-6 flex flex-col h-full">
                    <h3 class="text-xl font-semibold mb-4">{project.title}</h3>
                    <div class="flex flex-wrap gap-2"> <!-- Replace space-x-2 with flex-wrap and gap -->
                    {project.technologies.map((tech) => (
                        <span class="px-3 py-1 bg-zinc-800 rounded-full text-sm">{tech}</span>
                    ))}
                    </div>
                    <p class="text-gray-400 mt-12 flex flex-grow">{project.description}</p>
                    <div class="py-4">
                        <a href={project.githubUrl} class="text-gray-400 hover:text-white transition-colors">
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </article>
        ))}
    </div>
</section>