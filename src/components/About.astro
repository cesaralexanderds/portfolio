---
import infoData from '../data/info.json';
const { about } = infoData;
---

<section id="about" class="py-12 section md:pb-24 scroll-m-20 w-5/6 mx-auto container lg:max-w-6xl md:max-w-2xl">
    <h2 class="text-3xl font-semibold mb-12">
        About me
    </h2>
    <div class="flex flex-wrap md:w-full items-center md:justify-between">
            <p class="md:w-3/6 text-xl text-zinc-200 [&>strong]:text-indigo-500">
                {about.description}
            </p>
            <div
            class="mt-8 md:mt-0 flex flex-col gap-2 dark:text-white max-w-md md:w-3/6 bg-white dark:bg-neutral-900 p-5 rounded-md shadow-md hover:scale-105 hover:duration-150 duration-150"
          >



            <div class="flex flex-row justify-between w-full">
              <h3 class="text-xl font-bold">Education</h3>
            </div>
            
            <div class="text-sm">
                {about.education}
            </div>
            <div class="mt-3 flex flex-row justify-start w-full">
                <p class="text-xs">Expected Graduation in June, 2026</p>
            </div>
          </div>
        </div>
</section>